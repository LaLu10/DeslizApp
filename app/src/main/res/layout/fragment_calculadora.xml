<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculadoraFragment" android:orientation="vertical">

    <TextView
        android:id="@+id/tvPantalla"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="bottom|right|end"
        android:paddingEnd="12dp"
        android:text="0"
        android:textSize="48sp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="309dp"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnMC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="MC" />

            <Button
                android:id="@+id/btnMMas"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="M+" />

            <Button
                android:id="@+id/btnMMenos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="M-" />

            <Button
                android:id="@+id/btnMR"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="MR" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="84dp">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#777171"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"

                android:text="CLEAR" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#ED8909"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="/" />

            <Button
                android:id="@+id/btnMulti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#ED8909"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="X" />

            <Button
                android:id="@+id/btnC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#837D7D"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="C" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:text="9" />

            <Button
                android:id="@+id/btnMenos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#EC8F05"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="-" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="6" />

            <Button
                android:id="@+id/btnMas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#EC8F05"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="+" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="3" />

            <Button
                android:id="@+id/btn1x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#EC8F05"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="1/x" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnPunto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#706969"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="." />

            <Button
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="0" />

            <Button
                android:id="@+id/btnPorcentaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#837D7D"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="%" />

            <Button
                android:id="@+id/btnIgual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#EC8F05"
                android:insetLeft="8dp"
                android:insetTop="8dp"
                android:insetRight="8dp"
                android:insetBottom="8dp"
                android:text="=" />

        </TableRow>
    </TableLayout>

</LinearLayout>